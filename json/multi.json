{
    "title":"Calendar (multi)",
    "description":"Calendar offers multiple rendering timelines to navigate through time (swipe up down).",
    "oml":{
        "selector:Calendar":"{CONFIG}"
    },
    "demoml":{
        "#instance:Calendar":{
            "format":"YYYY-MM-DD HH:mm:ss",
            "layouts":[
                {"layout":"CENTURY_DECADES", "engine":"DECADE_NUMBER", "config":false},
                {"layout":"CENTURY_YEARS", "engine":"YEAR_NUMBER", "config":false},
                {"layout":"DECADE_YEARS", "engine":"YEAR_NUMBER", "config":false},
                {"layout":"DECADE_MONTHS", "engine":"MONTH_NUMBER", "config":false}, 
                {"layout":"YEAR_MONTHS", "engine":"MONTH_NUMBER", "config":false}, 
                {"layout":"YEAR_WEEKS", "engine":"WEEK_NUMBER", "config":false}, 
                {"layout":"YEAR_DAYS", "engine":"CELL_VALUE", "config":{"format":"DDD"}},
                {"layout":"MONTH_WEEKS", "engine":"WEEK_NUMBER", "config":false},  
                {"layout":"MONTH_DAYS", "engine":"DAY_NUMBER", "config":false},
                {"layout":"WEEK_DAYS", "engine":"DAY_NUMBER", "config":false},                
                {"layout":"DAY", "engine":"DAY_NUMBER", "config":false},
                {"layout":"DAY_HOURS",  "engine":"CELL_VALUE", "config":{"format":"HH:[00]"}},
                {"layout":"DAY_WORK_HOURS",  "engine":"CELL_VALUE", "config":{"format":"HH:[00]"}}
            ]
        }
    },
    "doc":{
        "extends":["Uxi", "Touch"],
        "properties":[
            {"name":"container", "type":"string", "desc":"selector where to create this object"},           
            {"name":"display_date", "type":"string|date", "desc":"the displayed date"},
            {"name":"date", "type":"string|date", "desc":"the selected date"},
            {"name":"format", "type":"string", "desc":"date/time format"},
            {"name":"layouts", "type":"array", "desc":"array of layouts"},
            {"name":"layout", "type":"int", "desc":"current layout"},
            {"name":"selectable", "type":"bool", "desc":"if date selection is allowed"},
            {"name":"swipeable", "type":"bool", "desc":"if swipe navigation is allowed"}
        ],
        "methods":[
            {"name":"val", "desc":"set or get the selected date"},
            {"name":"display", "desc":"set or get the displayed date"},
            {"name":"next", "desc":"show next time period"},
            {"name":"prev", "desc":"show previous time period"},
            {"name":"layout", "desc":"get current layout"},
            {"name":"destroy", "desc":"destroy the component"}
        ],
        "events":[
            {"name":"OGX.Calendar.SELECT", "desc":"when the end user selects a date/time"},
            {"name":"OGX.Calendar.UNSELECT", "desc":"when the end user unselects a date/time"}
        ]
    } 
}